[mysqld]
# サーバー側の文字コードを UTF-8 に設定
character-set-server=utf8mb4
collation-server=utf8mb4_0900_ai_ci

# 日本語環境向けの設定
init_connect='SET NAMES utf8mb4'
skip-character-set-client-handshake

# パフォーマンスチューニング
innodb_file_per_table=1
innodb_buffer_pool_size=1280M  # 物理メモリの余裕を使って Buffer Pool を増やし、I/O 待ちを減らす
innodb_flush_log_at_trx_commit=2  # データの永続性とパフォーマンスのバランスを取る
innodb_read_io_threads=4  # CPU コア数に合わせて調整
innodb_write_io_threads=4  # CPU コア数に合わせて調整
innodb_io_capacity=2000  # SSD なので I/O キャパシティを 2000 に増加
thread_cache_size=32  # OOM 対策のため、スレッドキャッシュを抑制
tmp_table_size=32M  # OOM 対策のため、一時テーブルのサイズ上限を抑制
max_heap_table_size=32M  # OOM 対策のため、一時テーブルのサイズ上限を抑制
innodb_redo_log_capacity=1G  # 書き込みバースト時のログ詰まりを緩和するため容量を戻す
innodb_buffer_pool_instances=1  # 1.25GB でも 1 インスタンス運用を維持して管理コストを抑える
innodb_log_buffer_size=128M  # COMMIT 遅延緩和のためログバッファを増やす
join_buffer_size=512K  # JOIN バッファサイズを増やす
table_open_cache=2000  # テーブルオープンキャッシュを増やす
max_connections=80  # OOM 対策のため、最大接続数を抑制

# スロークエリログの設定
slow_query_log=1
slow_query_log_file=/var/log/mysql/mysql-slow.log
long_query_time=1  # リアルタイムチャットなので 1 秒以上のクエリをスローとみなす

# SUPER 権限がなくてもトリガーを作成できるようにするための設定
log_bin_trust_function_creators=1

[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4
