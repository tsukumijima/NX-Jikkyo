[mysqld]
# サーバー側の文字コードを UTF-8 に設定
character-set-server=utf8mb4
collation-server=utf8mb4_0900_ai_ci

# 日本語環境向けの設定
init_connect='SET NAMES utf8mb4'
skip-character-set-client-handshake

# パフォーマンスチューニング
innodb_file_per_table=1
innodb_buffer_pool_size=2G  # 4GB VPS のメモリの 50% 程度を割り当てる
innodb_log_file_size=512M  # 書き込み性能向上のために大きめに設定
innodb_flush_log_at_trx_commit=2  # データの永続性とパフォーマンスのバランスを取る
innodb_read_io_threads=4
innodb_write_io_threads=4
innodb_io_capacity = 2000  # SSD なので I/O キャパシティを 2000 に設定
thread_cache_size = 16  # スレッドキャッシュを 4 コア VPS の 4 倍程度のサイズに設定
tmp_table_size=64M  # 一時テーブルのサイズを増やす
max_heap_table_size=64M  # 一時テーブルのサイズを増やす
innodb_redo_log_capacity=512M  # Redo Log 容量を調整
innodb_buffer_pool_instances=2  # バッファプールインスタンス数を調整
innodb_log_buffer_size=64M  # ログバッファサイズを調整
join_buffer_size=512K  # JOIN バッファサイズを増やす

# スロークエリログの設定
slow_query_log=1
slow_query_log_file=/var/log/mysql/mysql-slow.log
long_query_time=1  # リアルタイムチャットなので 1 秒以上のクエリをスローとみなす

# SUPER 権限がなくてもトリガーを作成できるようにするための設定
log_bin_trust_function_creators=1

[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4
